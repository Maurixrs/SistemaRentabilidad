@using (Ajax.BeginForm("_Expenses", "Statistics", new AjaxOptions
{
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "ajaxBeginFormResult",
    OnSuccess = "OnSuccess"
}))
{
    @Html.AntiForgeryToken()
    <div class="hidden-print">
        <div class="row">
            <div class="col-lg-1"></div>
            <h3 class="col-lg-4" style="margin-top: 0px">Ingrese rango de fechas</h3>
        </div>
        <div class="row form-horizontal">
            <div class="col-lg-1"></div>
            <label class="col-lg-1">Desde:</label>
            <input id='from' class="col-lg-1 form-control" style="width: 200px" type="number" required name='fecha1' max="2999" min="1900" data-rule-menor="true" placeholder="aaaa" />
            <div class="col-lg-1"></div>
            <label class="col-lg-1">Hasta:</label>
            <input id='to' type="number" class="col-lg-1 form-control" style="width: 200px" name='fecha2' max="2999" min="1900" placeholder="aaaa" />
            <div class="col-lg-1"></div>
            <input type='submit' onclick="ordenFechas()" onfocus="cargar()" value='Generar' class="btn btn-success col-lg-1" />

        </div>
        <br />
        <div class="text-center">
            <span id="spanOrdenFechas" class="text-danger"></span>
        </div>
    </div>
}

