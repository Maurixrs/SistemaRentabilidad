@model IEnumerable<SistemaRentabilidad.ViewModels.WsVM>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">Lista de Planillas</h2>
<hr />

<a href="@Url.Action("Create","Worksheets")" class="btn btn-success">Nueva Planilla</a>
<br /><br />

<table class="table table-striped table-bordered" id="tabla">
    <thead>
        <tr style="background-color:#2c3e50">
            <th style="color:white">
                Período
            </th>
            <th style="color:white">
                Descripción
            </th>
            <th style="color:white">
                Monto Total
            </th>

            <th style="color:white" class="text-center">Opciones</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WorksheetDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalAmount)
                </td>

                <td class="text-center">
                    <a href="@Url.Action("EditW","Worksheets", new { id = item.IdWorksheet })" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                    <a href="@Url.Action("Details","Worksheets", new { id = item.IdWorksheet })" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-list" aria-hidden="true"></span></a>
                    <a href="@Url.Action("Delete","Worksheets", new { id = item.IdWorksheet })" class="btn btn-primary btn-sm dialog-window"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                </td>
            </tr>
        }
    </tbody>

</table>

<div class="modal fade" id="myModal" role="dialog"
     aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title text-center">Eliminar Planilla</h4>
            </div>
            <div class="modal-body">
                <div class="te">Espere...</div>
            </div>

        </div>

    </div>

</div>


@section scripts
{
      <script>
          $(document).ready(function () {            

              ////Grilla automatica//
              $("#tabla").DataTable({
                  "language": {
                      "url": '@Url.Content("~/Scripts/DataTables/spanish.json")'
                  }
              });
          })

          $("body").on("click", "a.dialog-window", null, function (e) {
              e.preventDefault();

              var $link = $(this); // Reference to <a/> link
              var title = $link.text(); //this is title to fetch in htnl
              $('#myModal.modal-title').html(title);

              var url = $(this).attr('href');
              if (url.indexOf('#') == 0) {
                  $('#myModal').modal('show');
              }
              else {
                  $.get(url, function (data) {
                      $('#myModal .te').html(data);
                      $('#myModal').modal();
                  }).success(function () { $('input:text:visible:first').focus(); });
              }
          });

</script>
}
