@model IEnumerable<SistemaRentabilidad.ViewModels.WsVM>

@{
    ViewBag.Title = "Index";
}
<head>
    <style>
    .mes {
    text-transform:capitalize;
    background: none;
   border: none; }
   </style>
</head>
<h2 class="text-center">Lista de Planillas</h2>
<hr />

<a href="@Url.Action("CreateWorksheet","Worksheets")" class="btn btn-success hvr-grow positionBtn" >Nueva Planilla</a>
<br /><br />

<table class="table table-striped table-bordered" id="tabla">
    <thead>
        <tr style="background-color: #2c3e50";
">
            <th style="color:white">
                Período
            </th>
           
            <th style="color:white">
                Monto Total
            </th>


            <th style="color:white; width:120px" class="text-center">Opciones</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <div>
                        <div class="hidden">@item.Date.Year @item.Date.Month @item.Date.Day</div>
                        @{
                            var month = System.Globalization.CultureInfo.CurrentUICulture.DateTimeFormat.GetMonthName(item.Date.Month) + " " + item.Date.Year;
                            @Html.EditorFor(model => month, new { htmlAttributes = new { @class = "mes", @readonly = "readonly" } })
                        }

                    </div>
                </td>
               
                <td>
                    @Html.DisplayFor(modelItem => item.TotalAmount)
                </td>

                <td class="text-center">
                    <a href="@Url.Action("Details","Worksheets", new { id = item.IdWorksheet })" class="btn btn-info btn-sm"><span class="glyphicon glyphicon-list" aria-hidden="true"></span></a>
                    <a href="@Url.Action("EditW", "Worksheets", new {id = item.IdWorksheet})" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                    <a href="@Url.Action("Delete", "Worksheets", new {id = item.IdWorksheet, details = false})" class="btn btn-danger btn-sm"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                </td>
            </tr>
        }
    </tbody>

</table>

