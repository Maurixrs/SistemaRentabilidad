@model SistemaRentabilidad.ViewModels.WsVM
@{
    ViewBag.Title = "Eliminar Planilla";
}

<h2 class="text-center">Eliminar Planilla</h2>
<hr style="margin-top: 10px;margin-bottom: 10px;" />
<h3 class="text-center text-danger">¿Está seguro de eliminar esta Planilla?</h3>
