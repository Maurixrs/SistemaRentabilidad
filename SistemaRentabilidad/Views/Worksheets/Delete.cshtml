@model SistemaRentabilidad.ViewModels.WsVM

@{
    Layout=null;
}

@if (ViewBag.eliminar != null)
{
    <h3 class="text-center text-danger">Acción no permitida</h3>
    <h4 class="text-center">@ViewBag.eliminar</h4>
    <br />
    <div class="text-center">
        <button type="button" class="btn btn-primary" data-dismiss="modal">Cerrar</button>
    </div>
}
else
{
    <h3 class="text-center text-danger">¿Está seguro de eliminar la siguiente Planilla?</h3>
    <hr />
    <div>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Date)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Date)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.WorksheetDescription)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.WorksheetDescription)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.TotalAmount)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TotalAmount)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Comments)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Comments)
            </dd>

        </dl>
        <hr />

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color text-center">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Cerrar</button>
                <input type="submit" value="Eliminar" class="btn btn-danger" />

            </div>
        }
    </div>
}
