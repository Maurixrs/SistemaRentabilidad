<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="stylesheet" type="text/css" href="~/Content/hover.css">
    <link href="https://fonts.googleapis.com/css?family=Francois+One" rel="stylesheet">

   <style>   .full {color: rgba(0, 0, 0, 0.91);
             -webkit-background-size: cover;
             -moz-background-size: cover;
             background-size: cover;
             -o-background-size: cover;
             height: 100%;
         }</style>


</head>

<body class="full"  background='@Url.Content("~/Content/Images/fon 4.jpg")'>
   
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Rentabilidad", "Index", "Worksheets", new { area = "" }, new { @class = "navbar-brand hvr-bounce-in" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="hvr-underline-from-center">@Html.ActionLink("Planillas", "Index", "Worksheets")</li>
                    <li class="hvr-underline-from-center">@Html.ActionLink("Contacto", "Contact", "Home")</li>
                    @*<li>@Html.ActionLink("Nueva Carga", "Create", "Sheets")</li>
                    <li>@Html.ActionLink("Nuevo Informe", "Create", "Worksheets")</li>*@
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>





    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p class="text-center hidden-print"> - Sistema de Rentabilidad &copy; @DateTime.Now.Year - Godesa Solutions ®  <a class="hidden-print" style="color:black ">@Html.ActionLink("Contacto", "Contact", "Home")</></a> - </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/lib")
    @RenderSection("scripts", required: false)
</body>
</html>
