    function maxTen() {
        var inicio = parseInt($('#from').val());
        var fin = parseInt($('#to').val());
        var dif = fin - inicio;
       
        if (dif > 10) {
            $('#spanOrdenFechas').text("Disculpe, sólo puede haber diez (10) años de diferencia entre el inicio y el fin.");
            event.preventDefault();
        }

